<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>AutoTweet</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<!-- <link rel="stylesheet" type="text/css" href="bootstrap-theme.min.css"/> -->
    <link rel="stylesheet" type="text/css" href="./styles/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="./styles/page_theme.css"/>
    <link rel="stylesheet" type="text/css" href="./styles/index.css"/>
</head>
<body>
<div class="container">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">

<div class="jumbotron text-center">

    <h1><span ><img src="/images/TieLarge.png" alt="Automated Twitter Manager" style="width:80px;height:80px;"></img></span> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-default">Login</button>
    </form>

    <hr>

    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>
</div>
</div>
</body>
</html>
